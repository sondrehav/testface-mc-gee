@page "/"
@using DevExpress.Blazor
@inject IJSRuntime JS;
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<p>Welcome to your new app.</p>

<button class="btn btn-primary" @onclick="OnClick">
    Flere valg
</button>

<DxContextMenu @ref="@ContextMenu" CssClass="">
    <Items>
        <DxContextMenuItem BeginGroup="true" Text="Flytt til..." IconCssClass="fa fa-folders">
            <SubMenuTemplate>
                <div>
                    <h1>Megmegs</h1>
                </div>
            </SubMenuTemplate>
        </DxContextMenuItem>
    </Items>
</DxContextMenu>

@code {

    private DxContextMenu ContextMenu { get; set; }

    private void OnClick(MouseEventArgs e)
    {
        ContextMenu.ShowAsync(e.PageX + 5, e.PageY + 5);
    }

}